<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyApp"
             x:Class="MyApp.MainPage">

    
        <!-- Place new controls here -->

    <StackLayout Margin="20,35,20,20">
        <StackLayout x:Name="StartBlock" IsVisible="False">
            <Label>Run The Program on the computer and them click button</Label>
            <Button Text="click" Clicked="Button_Clicked_1" />
        </StackLayout>

        <StackLayout x:Name="FormBlock" IsVisible="False">
            <Entry x:Name="emailEntry" Placeholder="email"  />
            <Entry x:Name="passwordEntry" IsPassword="true" Placeholder="Password"  />
            <Button Text="click" Clicked="Button_Clicked" />
        </StackLayout>
    </StackLayout>
      
   
    

</ContentPage>
